        <Button
            android:id="@+id/btn_groupBy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stream_groupBy" />

        <Button
            android:id="@+id/btn_join"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stream_join" />

        <Button
            android:id="@+id/btn_flatMap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stream_flatMap" />
    </LinearLayout>
</ScrollView>